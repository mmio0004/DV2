{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Stacked area chart for BMI categories (Underweight, Healthy, Overweight/Obese) across regions and World (2000-2016).",
  "data": {
    "url": "https://raw.githubusercontent.com/mmio0004/DV2/main/data/Transformed_Men_Weight_Data_to_Wide_Format.csv"
  },
  "params": [
    {
      "name": "SelectedRegion",
      "value": "All Countries",
      "bind": {
        "input": "select",
        "options": [
          "All Countries", "Africa", "Northern America", "Central America", "Caribbean", 
          "South America", "Central Asia", "Eastern Asia", "South-eastern Asia", 
          "Southern Asia", "Western Asia", "Europe"
        ],
        "name": "Select Region: "
      }
    }
  ],
  "transform": [
    {
      "filter": "SelectedRegion == 'All Countries' ? true : datum.Region == SelectedRegion"
    },
    {
      "aggregate": [
        {"op": "mean", "field": "Healthy (NCDRisC (2017))", "as": "Healthy"},
        {"op": "mean", "field": "Overweight or Obese (NCDRisC (2017))", "as": "Overweight"},
        {"op": "mean", "field": "Underweight (NCDRisC (2017))", "as": "Underweight"}
      ],
      "groupby": ["Year"]
    },
    {
      "fold": [
        "Healthy",
        "Overweight",
        "Underweight"
      ],
      "as": ["BMI Category", "value"]
    }
  ],
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Proportion (%)",
      "stack": "normalize"
    },
    "color": {
      "field": "BMI Category",
      "type": "nominal",
      "title": "BMI Category",
      "scale": {
        "scheme": "category10"
      }
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "BMI Category", "type": "nominal", "title": "BMI Category"},
      {"field": "value", "type": "quantitative", "title": "Proportion (%)"}
    ]
  },
  "width": 600,
  "height": 300
}
