{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Stacked area chart for BMI categories (Underweight, Healthy, Overweight/Obese) across regions and World (2010-2014).",
  "data": {
    "url": "https://raw.githubusercontent.com/mmio0004/DV2/main/data/Rounded_Merged_World_Men_Weight_Data.csv"
  },
  "transform": [
    {
      "fold": [
        "Healthy (NCDRisC (2017))",
        "Overweight or Obese (NCDRisC (2017))",
        "Underweight (NCDRisC (2017))"
      ],
      "as": ["BMI Category", "value"]
    }
  ],
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": "Proportion (%)",
      "stack": "normalize"
    },
    "color": {
      "field": "BMI Category",
      "type": "nominal",
      "title": "BMI Category",
      "scale": {
        "scheme": "category10"
      }
    },
    "facet": {
      "field": "Region",
      "type": "nominal",
      "title": "Region",
      "columns": 2
    },
    "tooltip": [
      {"field": "Region", "type": "nominal", "title": "Region"},
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "BMI Category", "type": "nominal", "title": "BMI Category"},
      {"field": "value", "type": "quantitative", "title": "Proportion (%)"}
    ]
  },
  "width": 600,
  "height": 300
}
